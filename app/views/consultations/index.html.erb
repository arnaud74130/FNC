<%= render "shared/bandeau_new",
 titre: "Consultations",
 texte: "Module de gestion des consultations", path: new_consultation_path  %>

<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Libelle</th>
      <th>Debut</th>
      <th>Fin</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @consultations.each do |consultation| %>
      <tr>
        <td><%= link_to consultation.code, consultation %></td>
        <td><%= consultation.libelle %></td>
        <td><%= consultation.debut %></td>
        <td><%= consultation.fin %></td>
        <td><%= edit edit_consultation_path(consultation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>