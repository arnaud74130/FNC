<%= form_for(@consultation) do |f| %>
  <% if @consultation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@consultation.errors.count, "error") %> prohibited this consultation from being saved:</h2>

      <ul>
      <% @consultation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :libelle %><br>
    <%= f.text_field :libelle %>
  </div>
  <div class="field">
    <%= f.label :debut %><br>
    <%= f.date_select :debut %>
  </div>
  <div class="field">
    <%= f.label :fin %><br>
    <%= f.date_select :fin %>
  </div>
  <%= f.fields_for :etablissements do |sf| %>
      <%= sf.label :nom, "Etablissements" %><br />
      <%= sf.collection_select :etablissement_ids, Etablissement.all, :id, :nom, {:selected => @consultation.etablissements.map(&:id)}, {multiple: true} %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
